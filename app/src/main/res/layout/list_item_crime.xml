<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/list_item_crime_id"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<TextView
		android:id="@+id/crime_title_id"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="8dp"
		android:text="Crime Title"
		android:textColor="@android:color/black"
		android:textSize="18sp"
		app:layout_constraintEnd_toStartOf="@+id/crime_solved_image_view_id"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/crime_date_id"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="8dp"
		android:text="Crime Date"
		app:layout_constraintEnd_toEndOf="@+id/crime_title_id"
		app:layout_constraintStart_toStartOf="@+id/crime_title_id"
		app:layout_constraintTop_toBottomOf="@+id/crime_title_id" />
	
	<ImageView
		android:id="@+id/crime_solved_image_view_id"
		android:layout_width="46dp"
		android:layout_height="46dp"
		android:layout_marginTop="16dp"
		android:layout_marginEnd="16dp"
		android:layout_marginBottom="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@mipmap/handcuffs" />

</androidx.constraintlayout.widget.ConstraintLayout>